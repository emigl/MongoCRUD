<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>CRUD With MongoDB</title>
  </head>
  <body>
    <div class="container">
        <div class="shadow-lg pb-3 mb-5 bg-body rounded">
            <h3 class="p-3 justify-content-center">Customer data</h3>
            <form action="/new" method="post">
                <div class="row justify-content-center">
                    <div class="col-md-10 rows">
                        <label for="name" class="form-label ">Name</label>
                        <input id="name" name="name" type="text" class="form-control" required>
                    </div>
                </div>
                    <div class="row justify-content-center mt-4">
                        <div class="col-md-5 rows">
                            <label for="user" class="form-label">User</label>
                            <input id="user" name="user" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-5 rows ">
                            <label for="pass" class="form-label">Password</label>
                            <input id="pass" name="pass" type="password" class="form-control" required>
                        </div>
                    </div>
                    <div class="row justify-content-center mb-4 mt-4">
                        <div class="col-md-5 rows">
                            <label for="country" class="form-label">Country</label>
                            <input id="country" name="country" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-5 rows">
                            <label for="age" class="form-label">Age</label>
                            <input id="age" name="age" type="number" class="form-control" required>
                        </div>
                    </div>
                   
                
            <button type="submit" class="w-80 btn btn-save btn-lg"><i class="bi bi-save mr-3"></i>Submit</button>
            </form>

            <table class="table mt-4">
                <thead>
                    <tr>
                        <th class="idDisplay">ID</th>
                        <th>Name</th>
                        <th>User</th>
                        <th>Password</th>
                        <th>Country</th>
                        <th>Age</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach( (user) =>{%>
                        <tr>
                            <td class="idDisplay"><%= user._id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.user %></td>
                            <td><%= user.pass %></td>
                            <td><%= user.country %></td>
                            <td><%= user.age %></td>
                            <td>
                                <a type="button" class="btnEdit btn btn-outline-primary bi bi-pencil-square"></a>
                                <a href="/delete/<%= user._id %>" type="button" class="btnDelete btn btn-outline-danger bi bi-x-circle-fill"></a>
                            </td>
                            
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <!-- Modal -->
<div class="modal fade" id="modalUser" tabindex="-1" aria-labelledby="editUserLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editUserLabel">Edit info</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/edit" method="post">
                <div class="row justify-content-center">
                    <div class="col-md-10 rows">
                        <label for="name" class="form-label ">Name</label>
                        <input id="modalName" name="modalName" type="text" class="form-control" required>
                    </div>
                </div>
                    <div class="row justify-content-center mt-4">
                        <input name="modalId" id="modalId" type="text" hidden>
                        <div class="col-md-5 rows">
                            <label for="user" class="form-label">User</label>
                            <input id="modal_user" name="modal_user" type="text" class="form-control">
                        </div>
                        <div class="col-md-5 rows ">
                            <label for="pass" class="form-label">Password</label>
                            <input id="modalPass" name="modalPass" type="text" class="form-control" value="">
                        </div>
                    </div>
                    <div class="row justify-content-center mb-4 mt-4">
                        <div class="col-md-5 rows">
                            <label for="country" class="form-label">Country</label>
                            <input id="modalCountry" name="modalCountry" type="text" class="form-control" value ="">
                        </div>
                        <div class="col-md-5 rows">
                            <label for="age" class="form-label">Age</label>
                            <input id="modal_age" name="modal_age" type="number" class="form-control" value ="">
                        </div>
                    </div>
                   
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                      </div>
            </form>

        </div>
        
      </div>
    </div>
  </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

    <script src="/js/code.js"></script>
  </body>
</html>